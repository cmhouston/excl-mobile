<Alloy>
	<Window class="container">
		<ScrollView class="verticalContainer" >
			<Label id="title" class="title">
				Choose your Wordpress Environment
			</Label>
			<Label class = "boldLabel">
				Current Environment:
			</Label>
			<Label id="currentEnvironLabel">
			</Label>
			<Button class="environmentOption" onClick="enterProductionMode">
				Production (prod)
			</Button>
			<Button class="environmentOption" onClick="enterQualityAssuranceMode">
				Quality Assurance (qa)
			</Button>
			<Button class="environmentOption" onClick="enterDevelopmentMode">
				Development (dev)
			</Button>
			<Button class="environmentOption" onClick="enterOtherMode">
				Other
			</Button>
			<View class="horizontalContainer" >
				<Label class = "boldLabel">
					Show Unpublished Posts
				</Label>
				<Switch id="toggleUnpublishedPostsSwitch"/>
			</View>
			<Label class="boldLabel">
				Choose your Wordpress Environment
			</Label>
			<Button class="environmentOption" onClick="resetCache">
				Reset Offline Cache
			</Button>
		</ScrollView>
	</Window>
</Alloy>