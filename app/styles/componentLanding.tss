".container": {
	navBarHidden: true,
	fullscreen: true,
	backgroundColor: Alloy.Globals.colors.pageBackgroundColor
}

"#scrollView":{
	layout:"vertical",
	id: "scrollView",
	contentWidth: "100%",
	height: "100%",
	top:"50dip"
}

"#scrollView[formFactor=tablet]":{
	top: "75dip"
}

"#topBar":{
	layout: "vertical",
	contentWidth: "100%",
	height: "50dip",
	top: "0dip"
}

"#topBar[formFactor=tablet]":{
	height: "75dip"
}
